---
import { changeLanguage } from "i18next";
import Base from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import "../../styles/global.css";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("en");

const posts = (await getCollection("blog")).sort((b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf());
---


<Base title="WiiLink - News" />
<body>

			{
				posts.map((post) => (
					<div class="mainpost">
						<a href={`/news/${post.slug}/`}>
							<div class="flexhead">
							<img class="mainimgsmall" src={post.data.heroImage} width="200px">
							<div>
								<div class="maintitle">{post.data.title}</div>
								<div class="maindesc">{post.data.description}</div>
							</div>
						</div>
						<div class="fade"></div>
						<img class="mainimg" src={post.data.heroImage} width="200px">
						</a>
					</div>
				))
			}

			<div class="postholder">
				{
					posts.map((post) => (
						<div class="posthold">
						<div class="post">
							<a href={`/news/${post.slug}/`}>
							<FormattedDate date={post.data.pubDate} />
							<div class="fade"></div>
							<img class="heroImage" src={post.data.heroImage}>
							<div class="title"><img class="authimage" src={post.data.authImage} alt="" /><b style="width:80%; margin-right:10px; text-align:right; position:relative;">{post.data.title}</b></div>
							<div class="desc">{post.data.description}</div>
							</a>
						</div>
						</div>
					))
				}
			</div>

			<h2 style="margin-top:60px; left:10%; position:relative; width:50%;">{t("blog.other")}</h2>

			<div class="postholdermini">
				<div class="polka-dot"></div>
				{
					posts.map((post) => (
						<div class="postmini">
							<a href={`/news/${post.slug}/`}>
							<div class="fade"></div>
							<FormattedDate date={post.data.pubDate} />
							<div class="title">{post.data.title}</div>
							</a>
						</div>
					))
				}
			</div>

			<h3 style="margin-top:100px; text-align:center; position:relative; width:100%;">{t("blog.rss")}</h3>
			<a href="https://www.wiilink24.com/rss.xml"><div class="rss">{t("blog.rssbtn")}</div></a>

</body>


<style>
	.flexhead{
		left:50%;
		top:100px;
		transform: translate(-50%, 0);
		align-items: center;
		justify-content: center;
		display: flex;
		z-index: 100;
		position: absolute;
	}

	.mainimgsmall{
		-webkit-mask-image: url(/img/mask2.svg);
  mask-image: url(/img/mask2.svg);
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;    
  mask-size: 100% 100%;
  mask-position: center;
		height:150px;
		width:auto;
		z-index:10;
		position: relative;
	}

	.posthold{
		transform: translate(0, 0px);
		filter: drop-shadow(0px 0px 20px #70707056);
		transition: 0.5s;
		position: relative;
	}

	.posthold:hover{
		transform: translate(0, -5px);
		filter: drop-shadow(0px 0px 20px #37373756);
		transition: 0.5s;
	}

	.mainimg{
		filter:blur(8px) opacity(0.3);
		transition: 0.2s;
	}

	.mainpost:hover .mainimg{
		filter: blur(7px) opacity(0.3) brightness(125%);
		transition: 0.2s;
	}

	.mainpost{
		width:100%;
		height:400px;
		top:0;
		left:0;
		opacity:0;
		overflow: hidden;
		translate:0.5s;
		position: absolute;
	}

	.mainpost .fade{
		background: linear-gradient(0deg, rgb(255, 255, 255) 0%, rgba(239, 239, 239, 0) 100%);
	}

	.authimage{
		margin-right:10px;
		width:40px;
		height:40px;
		border-radius: 8px;
		border:1px solid #ffffff;
		box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.297);
		z-index: 10000000000;
	}

	.mainpost:nth-child(1){
		opacity:1;
	}

	.postholder{
		width:90%;
		display: grid;
		grid-template-columns:repeat(auto-fit, minmax(400px, 1fr));
		position: absolute;
		gap: 20px;
		top:400px;
		left:50%;
		transform: translate(-50%,0);
		position: relative;
		padding-bottom:500px;
		z-index: 10;
	}

	.postholdermini{
		width:90%;
		display: grid;
		grid-template-columns:repeat(auto-fit, minmax(300px, 1fr));
		position: absolute;
		gap: 20px;
		left:50%;
		transform: translate(-50%,0px);
		position: relative;
		z-index: 10;
	}

	.post{
		-webkit-mask-image: url(/img/mask2.svg);
  mask-image: url(/img/mask2.svg);
  -webkit-mask-repeat: no-repeat;
  mask-repeat: no-repeat;    
  mask-size: 100% 100%;
  mask-position: center;
		position: relative;
    	height:250px;
    	width:100%;
		filter: drop-shadow(-1px 6px 3px rgba(50, 50, 0, 0.5));
    	border-radius: 15px;
		font-family: Gilroy;
    	hyphens:auto;
    	overflow: hidden;
		opacity:0;
    	transition: 0.5s;
		animation-name: fadeup;
		animation-duration:0.5s;
		animation-fill-mode:forwards;
		animation-delay:0.22s;
	}

	.posthold:nth-child(n+7){
		display:none;
	}

	.postmini:nth-child(n+8){
		display:block;
	}

	.postmini{
		position: relative;
    	height:200px;
    	width:100%;
 		background-color:rgb(247, 247, 247);
    	border-radius: 15px;
		font-family: Gilroy;
    	hyphens:auto;
    	overflow: hidden;
    	border: 2px solid rgba(215, 215, 215, 0.066);
    	transition: 0.5s;
		display:none;
	}

	.post:hover{
    	transform: translate(0,-20px) scale(105%);
    	box-shadow: 0px 5px 20px rgb(187, 187, 187);
    	transition: 0.5s;
  	}


	.postmini:hover{
    	background-color:rgb(39, 39, 39);
    	transform: translate(0,-5px);
    	box-shadow: 0px 0px 70px rgb(43, 43, 43);
		border: 3px solid rgba(255, 255, 255, 0.252);
    	transition: 0.5s;
  	}

	.heroImage{
		height:auto;
		width:100%;
	}

	.post:hover .heroImage{
		filter: blur(8px) brightness(0.7);
		rotate: -3deg;
		scale: 120%;
		z-index:0;
		transition: 0.5s;
  	}

	img{
		width: 100%;
		left:0;
		z-index: 0;
		transition: 0.5s;
	}

	.maintitle{
		left:80px;
		color:rgb(33, 36, 40);
		z-index: 11;
		scale:100%;
		font-size: 60px;
		text-align: left;
		font-family: Gilroy;
		transition: 0.5s;
		position: relative;
	}

	.maindesc{
		position: relative;
		z-index: 11;
		font-size: 30px;
		left:80px;
		text-align: left;
		color:rgb(33, 36, 40);
		width:100%;
		font-family: system-ui;
		transition: 0.5s;
		display: -webkit-box;
    	-webkit-line-clamp: 2;
    	-webkit-box-orient: vertical;
    	overflow: hidden;
    	text-overflow: ellipsis;
		opacity:1;
		transition: 0.5s;
	}

	.title{
		width:100%;
		z-index: 11;
		display: flex;
		align-items: center;
		flex-direction: row-reverse;
		font-size: 30px;
		bottom:20px;
		right:10px;
		line-height: 30px;
		font-family: Gilroy;
		transition: 0.5s;
		position: absolute;
	}

	.post:hover .title{
		bottom:60%;
		transform: translate(0, 50%);
		transition: 0.5s;
	}

	.desc{
		position: absolute;
		font-family: system-ui;
		width:90%;
		font-size: 20px;
		right:20px;
		bottom:0;
		transform:translate(0,50px);
		opacity: 0;
		text-align: justify;
		transition: 0.5s;
    	display: -webkit-box;
    	-webkit-line-clamp: 2;
    	-webkit-box-orient: vertical;
    	overflow: hidden;
    	text-overflow: ellipsis;
	}

	.post:hover .desc{
		bottom:48%;
		opacity: 1;
		transform: translate(0, 100%);
		transition: 0.5s;
	}

	.fade{
		width:100%;
		height:100%;
		background: linear-gradient(0deg, rgb(61, 61, 61) 0%, rgba(239, 239, 239, 0) 100%);
		position: absolute;
		z-index:2;
		bottom:-50px;
		left:0;
		transition: 0.5s;
	}

	.post:hover .fade{
		transform: translate(0, 50px);
		transition: 0.5s;
	}

	.polka-dot {
    	width: 240px;
    	height: 240px;
    	background-image: radial-gradient(#fff 10%, transparent 11%),
      	radial-gradient(#fff 10%, transparent 11%);
		background-size:30px 30px;
    	background-position: 0 0, 30px 30px;
    	opacity: 0.3;
    	rotate: 30deg;
    	left:-50px;
    	top:-80px;
    	background-repeat: repeat;
		animation: rotate 240s linear infinite;
    	position: absolute;
    	z-index: 0;
  	}

	.topimg{
		filter:invert(1); transform:translate(-100px,-100px); opacity:0.03; position:absolute; width:100%;
	}

	@keyframes rotate{
    0%{
        rotate:0deg;
    }
    100%{
        rotate:360deg;
    }
  }

	a{
		bottom:50px;
		z-index:1;
		color:white;
	}

	@keyframes fadeup{
		0%{
			opacity:0;
			transform: translate(0, -20px);
		}
		100%{
			opacity:1;
			transform: translate(0, 0px);
		}
	}

	.rss{
		left:50%;
		transform: translate(-50%,0);
		padding:5px;
		padding-left:10px;
		padding-right:10px;
		background-color:rgb(98, 141, 98);
		border-radius:8px;
		color:white;
		font-family: Gilroy;
		position:absolute;
		transition: 0.5s;
	}

	.rss:hover{
		transform: translate(-50%, -2px);
		box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.22);
		transition: 0.5s;
	}

	@media (max-width:1000px) {
	
	}
</style>

