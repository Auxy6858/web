---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="img/favicon.png" />
		<script src="https://kit.fontawesome.com/e47ece3e74.js" crossorigin="anonymous"></script>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
		<link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>

html.dark .offcanvas-body { background-color: #121212; transition:0.5s; }
html.dark h1 { color: white; transition:0.5s; }
html.dark h2 { color: white; transition:0.5s; }
html.dark h3 { color: white; transition:0.5s; }
html.dark h4 { color: white; transition:0.5s; }
html.dark .subtitle { color: white; transition:0.5s; }
html.dark .dropdownbtn { color: white; transition:0.5s; }
html.dark .link { color: white; transition:0.5s; }
html.dark .title { filter:brightness(200%); transition:0.5s; }
html.dark .stripe-logo { filter:invert(1); transition:0.5s; }
html.dark .bottomleftcorner { animation: changecolordark 10s linear infinite; transition:0.5s; }
html.dark .form-check-label { color: rgb(255, 255, 255); transition:0.5s; }
html.dark .dots {  background-image:radial-gradient(#ffffff40 2px,transparent 2px); background-size: 15px 15px; transition:0.5s; }
html.dark .symbolholder { background-color: #000000; transition:0.5s; }
html.dark .member { background-color: #1b1b1b; transition:0.5s; }
html.dark .build-square { background: #242424; border:2px solid rgb(60, 60, 60); transition:0.5s; }
html.dark .github { color:white; background: #24242400; border:2px solid rgb(60, 60, 60); transition:0.5s; }
html.dark .service { background-color: #202020; box-shadow:0px 0px 20px #ffffff10; transition:0.5s; }
html.dark .slider::before { background: linear-gradient(to right,  #121212 0%,#12121200 100%); transition:0.5s; }
html.dark .slider::after { background: linear-gradient(to right,  #121212 0%,#12121200 100%); transition:0.5s; }
html.dark .hide { color: rgba(255, 255, 255, 0.573); transition:0.5s; }
html.dark .donator-holder { color: white; transition:0.5s; }
html.dark .slidedown { color: white; transition:0.5s; }
html.dark .square { animation: changecolordark 10s linear infinite; transition:0.5s; }
html.dark #square2 { background-color: #121212; transition:0.5s; }


@font-face {
  font-family: Rubik;
  src: url(/fonts/Rubik.ttf);
}

@font-face {
  font-family: gilroy;
  src: url(/fonts/Gilroy.otf);
}

	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		--bg-color: #ffffff;


		font-family: system-ui, sans-serif;
		background-color: var(--bg-color);
		background-size: 224px;
	}

	h1 {
		--bg-text: #121212;
		color:var(--bg-text);
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
